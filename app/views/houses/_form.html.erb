      <h2><%= pluralize(house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
        <% house.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :house_name %>
  </div>

  <div class="field">
    <%= form.label :賃貸料 %>
    <%= form.text_field :rent %>
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
    <%= form.text_field :house_age %>
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :remarks %>
  </div>
  
  <%= form.fields_for :stations do |station|%>
    <h2>最寄駅<%= station.index  + 1 %></h2>

    <div class="field">
      <%= station.label :line_name, "路線名" %>
      <%= station.text_area :line_name %>
    </div>

    <div class="field">
      <%= station.label :near_station_name, "駅名" %>
      <%= station.text_area :near_station_name %>
    </div>

    <div class="field">
      <%= station.label :walk, "徒歩" %>
      <%= station.text_area :walk %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>